<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFitnessCenter_Client.EmployeeAcc"
             Title="EmployeeAcc">
	<VerticalStackLayout Padding="40, 10, 40, 10" Spacing="10">
        <Label 
            Text="Ваш Аккаунт"
			FontSize="28"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
		<Label x:Name="labelFIO" FontSize="18" Text="ФИО: "/>
		<Label x:Name="labelBirthday" FontSize="18" Text="Дата Рождения: "/>
		<Label x:Name="labelAdres" FontSize="18" Text="Адрес: "/>
		<Label x:Name="labelPhone" FontSize="18" Text="Телефон: "/>
		<Label x:Name="labelRole" FontSize="18" Text="Ваша Должность: "/>
		<Label x:Name="labelSalary" FontSize="18" Text="Оклад: "/>
		<Button Text="Вернуться назад" Clicked="ButtonExit_Click"/>
	</VerticalStackLayout>
</ContentPage>